{% extends "base.html" %}
{% block title %}Output{% endblock %}
{% block content %}
<div id="outputBox">
   <input readonly type="text" value="testcopy33" id="output" >
   {{response}} 
   <br>
</div>
<br>
<button onclick="copyScript()"> Copy Text </button>
<script>
function copyScript() {
  const copyText = document.getElementById("output");
  copyText.select();
  document.execCommand("copy");
  alert("Text Copied");
}
</script>
{% endblock %}
